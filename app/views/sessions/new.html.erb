<section class="sign-in-main">
<h1 class="session-title">Sign In</h1>

<form class="sign-in" action="<%= sessions_url %>" method="post">
  <%= auth_token %>
  <label>
    Username or Email
    <input class="new-session-input" type="string" name="user[login]" value="">
  </label>
  <label>
    Password
    <input class="new-session-input" type="password" name="user[password]" value="">
  </label>
  <button class="new-session-button">Sign In</button>
</form>
<% unless flash[:error].nil? %>
  <ul class="sign-in-errors">
    <% flash[:error].each do |message| %>
      <li class="error-message"><%= message %></li>
    <% end %>
  </ul>
<% end %>
<% unless flash[:errors].nil? %>
  <ul class="sign-up-errors">
    <% flash[:errors].each do |message| %>
      <li class="error-message"><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1 class="session-title">Sign Up</h1>

<form class="sign-up" action="<%= users_url %>" method="post">
  <%= auth_token %>
  <label>
    Username
    <input class="new-session-input" type="string" name="user[username]" value="<%= @user.username %>">
  </label>
  <br>
  <label>
    Email
    <input class="new-session-input" type="string" name="user[email]" value="<%= @user.email %>">
  </label>
  <br>
  <label>
    Password
    <input class="new-session-input" type="password" name="user[password]" value="">
  </label>
  <br>
  <button class="new-session-button">Sign Up</button>
</form>

<a class="twitter-sign-in" href="/auth/twitter"><img src="/images/twitter/sign-in-twitter.png"></a>


</section>
