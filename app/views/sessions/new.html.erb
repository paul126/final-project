<h1>Sign Up</h1>

<form class="sign-up" action="<%= users_url %>" method="post">
  <%= auth_token %>
  <label>
    Username: <input type="string" name="user[username]" value="">
  </label>
  <br>
  <label>
    Email: <input type="string" name="user[email]" value="">
  </label>
  <br>
  <label>
    Password: <input type="password" name="user[password]" value="">
  </label>
  <br>
  <button>Sign Up</button>

</form>
