<h1>Sign In</h1>
<% unless flash[:error].nil? %>
  <ul class="errors">
    <% flash[:error].each do |message| %>
      <li class="error-message"><%= message %></li>
    <% end %>
  </ul>
<% end %>
<form class="sign-in" action="<%= sessions_url %>" method="post">
  <%= auth_token %>
  <label>
    Username or Email: <input type="string" name="user[login]" value="">
  </label>
  <br>
  <label>
    Password: <input type="password" name="user[password]" value="">
  </label>
  <br>
  <button>Sign In</button>

</form>
<br>
