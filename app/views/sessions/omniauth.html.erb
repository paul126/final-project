<h1>Sign Up</h1>
<% unless flash[:errors].nil? %>
  <ul class="errors">
    <% flash[:errors].each do |message| %>
      <li class="error-message"><%= message %></li>
    <% end %>
  </ul>
<% end %>
<p class="twitter-sign-up">
Please fill in the missing information to continue.
</p>
<form class="sign-up" action="<%= users_url %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="user[provider]" value="<%= @user.provider %>">
  <input type="hidden" name="user[uid]" value="<%= @user.uid %>">

  <label>
    Username: <input type="string" name="user[username]" value="<%= @user.username %>">
  </label>
  <br>
  <label>
    Email: <input type="string" name="user[email]" value="<%= @user.email %>">
  </label>
  <br>
  <label>
    Password: <input type="password" name="user[password]" value="">
  </label>
  <br>
  <button>Sign Up</button>

</form>
