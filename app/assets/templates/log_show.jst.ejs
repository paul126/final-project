<h1 class="log-title"><%= log.escape('title') %>
  <% if (log.get('current_user_is_user')) { %>
    <button class="edit-log-button">Edit Log</button>
    <button class="discard-changes hidden">Discard Changes</button>
</h1>
    <section class="log-edit hidden">
      <form class="log-form">
        <label class="log-label">Title:
          <input type="string" name="log[title]" value="<%= log.escape('title') %>">
        </label>
        <br>
        <label class="log-label">Date:
          <input type="date" name="log[date]" value="<%= log.escape('date') %>">
        </label>
        <br>
        <label class="log-label">Distance:
          <input type="number" step="0.01" name="log[distance]" value="<%= log.escape('distance') %>">mi
        </label>
        <br>
        <label class="log-label">Duration:
          <input type="number" name="log[hours]" value="<%= log.escape('hours') %>">hrs
          <input type="number" name="log[minutes]" value="<%= log.escape('minutes') %>">min
          <input type="number" step="0.01" name="log[seconds]" value="<%= log.escape('seconds') %>">sec
        </label>
        <br>
        <label class="log-label">Shoes:
          <select class="shoes-select" name="log[shoe_id]">
            <% if (log.escape('shoe_id')) { %>
              <option value="<%= log.escape('shoe_id') %>"><%= log.escape('shoe_name') %></option>
            <% } else { %>
              <option value="none">Select One</option>
            <% } %>
            <% shoe_options.each( function (shoe) {%>
              <% if (shoe.escape('shoe_id') !== log.escape('shoe_id')) { %>
               <option value="<%= shoe.escape('shoe_id') %>"><%= shoe.escape('name') %></option>
              <% } %>
            <% }) %>
            <option value="none">Remove Selection</option>
          </select>
        </label>
        <br>
        <label class="log-label">Notes:
          <br>
          <textarea name="log[notes]" rows="4" cols="50"><%= log.escape('notes') %></textarea>
        </label>
        <br>
          <button>Save Changes</button>
      </form>
    </section>
  <% } else { %>
</h1>
  <% } %>
<section class="log-show">
  <h2 class="log-user">
    <a href="#users/<%= log.escape('user_id') %>"><%= log.escape('username') %></a>
    - <%= log.escape('date') %>
  </h2>
  <ul class="log-show">
    <li>Distance: <%= log.escape('distance') %>mi</li>
    <li>Duration: <%= log.escape('duration_string') %></li>
    <li>Pace: <%= log.escape('pace') %>min/mi</li>
    <li>Shoe: <%= log.escape('shoe_name') %></li>
  </ul>
  <p class="log-notes">
    <%= log.escape('notes') %>
  </p>
</section>
