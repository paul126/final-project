<h1>Add Training Log</h1>
<form class="log-form">
  <label class="log-label">Title:
    <input type="string" name="log[title]">
  </label>
  <br>
  <label class="log-label">Date:
    <input type="date" name="log[date]">
  </label>
  <br>
  <label class="log-label">Distance:
    <input type="number" step="0.01" name="log[distance]">mi
  </label>
  <br>
  <label class="log-label">Duration:
    <input type="number" name="duration[hours]">hrs
    <input type="number" name="duration[minutes]">min
    <input type="number" step="0.01" name="duration[seconds]">sec
  </label>
  <br>
  <label class="log-label">Shoes:
    <select class="shoes-select" name="log[shoe_id]">
      <option>Select One</option>
      <% shoe_options.each( function (shoe) {%>
        <% if (shoe.escape('shoe_id') !== log.escape('shoe_id')) { %>
         <option value="<%= shoe.escape('shoe_id') %>"><%= shoe.escape('name') %></option>
        <% } %>
      <% }) %>
    </select>
  </label>
  <br>
  <label class="log-label">Notes:
    <br>
    <textarea name="log[notes]" rows="4" cols="50"></textarea>
  </label>
  <br>
  <button>Add Log</button>
</form>
