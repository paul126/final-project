


<h1 class="form-title">New Training Log</h1>
<form class="log-form">
  <label class="log-label">Title:
    <input class="title-input" type="string" name="log[title]">
    <p class="input-desc">(optional)</p>
  </label>

  <label class="log-label">Date:
    <input class="date-input" type="text" name="log[date]">(yyyy-mm-dd)
  </label>

  <label class="log-label">Distance:
    <input class="distance-input" type="number" step="0.01" min="0.01" max="999.99" maxlength="6" name="log[distance]">
    <p class="input-desc">(mi)</p>
  </label>

  <label class="log-label">Duration:
    <input class="time-input hour" type="number" min="0" max="99" value="0" name="duration[hours]">:<input class="time-input minute" type="number" min="0" max="59" value="0" name="duration[minutes]">:<input class="time-input" type="number" min="0" max="59.99" step="0.01" value="0" name="duration[seconds]">
    <p class="input-desc">(hh:mm:ss.ss)</p>
  </label>

  <label class="log-label">Shoes:
    <select class="shoes-select" name="log[shoe_id]">
      <option value="none"></option>
      <% shoes.each( function (shoe) {%>
       <option value="<%= shoe.escape('id') %>"><%= shoe.escape('name') %></option>
      <% }) %>
    </select>
    <p class="input-desc">(optional)</p>
  </label>

  <label class="log-label">Notes: <p class="input-desc">(optional)</p>
    <textarea name="log[notes]" rows="4" cols="50"></textarea>
  </label>
  <button>Add Log</button>
</form>
